{
    "name": "@primereact/monorepo",
    "version": "11.0.0",
    "author": "PrimeTek Informatics",
    "homepage": "https://primereact.org/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/primefaces/primereact.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/primefaces/primereact/issues"
    },
    "scripts": {
        "setup": "pnpm run clean && pnpm run init",
        "clean": "npx rimraf --glob **/node_modules **/dist **/.next ./pnpm-lock.yaml",
        "init": "pnpm install && husky",
        "link": "pnpm --filter './packages/*' dev:link",
        "release": "pnpm run build && pnpm recursive publish --filter './packages/*' --no-git-checks --report-summary",
        "release:beta": "pnpm run build && pnpm recursive publish --filter './packages/*' --no-git-checks --report-summary --tag v11-beta",
        "release:rc": "pnpm run build && pnpm recursive publish --filter './packages/*' --no-git-checks --report-summary --tag v11-rc",
        "build": "cross-env NODE_ENV=production pnpm run build:check && pnpm run build:packages",
        "build:check": "pnpm run format:check && pnpm run security:check",
        "build:packages": "pnpm recursive run build",
        "build:core": "pnpm --filter core build",
        "build:headless": "pnpm --filter headless build",
        "build:hooks": "pnpm --filter hooks build",
        "build:icons": "pnpm --filter icons build",
        "build:metadata": "pnpm --filter metadata build",
        "build:lib": "pnpm --filter primereact build",
        "build:showcase": "pnpm --filter showcase build",
        "build:apidoc": "pnpm --filter showcase build:docs",
        "dev": "pnpm --filter showcase dev",
        "dev:scan": "pnpm --filter showcase scan",
        "type:check": "pnpm --filter './packages/*' typecheck",
        "security:check": "pnpm audit --prod --audit-level high",
        "format": "prettier --write \"**/*.{js,jsx,mjs,ts,tsx,mts,d.ts}\" --cache",
        "format:check": "prettier --check \"**/*.{js,jsx,mjs,ts,tsx,mts,d.ts\"",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test:unit": "pnpm --filter primereact test:unit"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@types/jest": "^29.5.14",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.20.0",
        "eslint-config-prettier": "^10.0.1",
        "fs-extra": "^11.3.0",
        "glob": "^11.0.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "pnpm": "9.6.0",
        "prettier": "^3.4.2",
        "react-scan": "0.3.3",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "tsup": "^8.3.6",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.24.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "packageManager": "pnpm@9.6.0",
    "lint-staged": {
        "**/*.{js,jsx,mjs,ts,tsx,mts,d.ts}": ["eslint --fix", "prettier --write"]
    }
}
