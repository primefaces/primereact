{
    "useTabs": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "semi": true,
    "singleQuote": true,
    "printWidth": 150,
    "bracketSameLine": false,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.mts", "*.d.ts"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": ["*.mdx"],
            "options": {
                "parser": "markdown"
            }
        },
        {
            "files": ["*.js", "*.jsx", "*.mjs"],
            "options": {
                "parser": "babel"
            }
        },
        {
            "files": ["*.css", "*.scss"],
            "options": {
                "parser": "scss",
                "singleQuote": false
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "parser": "yaml",
                "tabWidth": 2
            }
        }
    ]
}
